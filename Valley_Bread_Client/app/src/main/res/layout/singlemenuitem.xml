<?xml version="1.0" encoding="utf-8"?>


<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="100dp"
    android:layout_margin="10dp"
    app:cardCornerRadius="10dp"
    app:cardElevation="10dp"
    tools:context="com.tetteh1568.valley_bread_client.MenuActivity">

    <RelativeLayout
        style="@style/rohit"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/breadImage"
            android:layout_width="150dp"
            android:layout_height="160dp"
            android:background="@drawable/logo"
            android:scaleType="matrix" />

        <TextView
            android:id="@+id/breadName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="12dp"
            android:layout_toEndOf="@+id/breadImage"
            android:paddingStart="10dp"
            android:text="Butter Bread"
            android:textColor="#fffff0"
            android:textSize="30dp"

            />

        <TextView
            android:id="@+id/breadDesc"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="5dp"
            android:paddingStart="10dp"
            android:text="Tasty VVU Butter Bread"
            android:visibility="invisible"

            />

        <TextView
            android:id="@+id/breadPrice"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/breadName"
            android:layout_toEndOf="@+id/breadImage"
            android:paddingStart="10dp"
            android:text="GHS5"
            android:textColor="@color/colorAccent"
            android:textSize="20dp"
            android:textStyle="bold" />
    </RelativeLayout>

</android.support.v7.widget.CardView>
