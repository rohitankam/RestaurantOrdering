<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.tetteh1568.valley_bread.AddFood">


    <ImageButton
        android:id="@+id/breadImageButton"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        android:elevation="10dp"
        android:onClick="ImageButtonClicked"
        android:tooltipText="click here" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ItemName"
        android:textColorHint="@color/textprimary"
        android:textColor="@color/textprimary"
        android:hint="Enter Food Item Name"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/ItemDesc"
        android:textColorHint="@color/textprimary"
        android:textColor="@color/textprimary"
        android:hint="Enter Food Description"
        />
    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColorHint="@color/textprimary"
        android:textColor="@color/textprimary"
        android:id="@+id/ItemPrice"
        android:hint="Enter Price of Item"
        />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Upload Food Details"
        android:inputType="number"
        android:textColorHint="@color/textprimary"
        android:textColor="@color/textprimary"
        android:onClick="addItemButtonClicked"
        />


</LinearLayout>
